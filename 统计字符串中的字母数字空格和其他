//统计一串字符中字母,数字,空格和其他的个数
#include <stdio.h>
int main()
{
	int number=0,letter=0,space=0,other=0;
	char n;
	printf("please input some characters\n");
	while((n=getchar())!='\n')
	{
		if(n>='a'&&n<='z'||n>='A'&&n<='Z')
		letter+=1;
		else if(n==' ')
		space+=1;
		else if(n>='0'&&n<='9')
		number+=1;
		else
		other+=1;
	}
	printf("字母有%d个，数字有%d个，空格有%d个，其他有%d个",letter,number,space,other);
	return 0;
} 
